{
  "productName": "AI助手",
  "appId": "com.sixunited.ai-assistant",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist-electron", "dist"],
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  }
}
